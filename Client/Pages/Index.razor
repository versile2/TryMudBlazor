@page "/"
@using MudBlazor.Docs
@layout MainLayout


<MudContainer MaxWidth="MaxWidth.False" Class="trymudblazor-index-appbar">
    <MudAppBar Color="Color.Transparent" Position="Position.Relative" Elevation="0">
        <div class="mudblazor-brand">
            Try<span style="color: #594ae2;">MudBlazor</span>
        </div>
        <MudAppBarSpacer />
        <MudButton Link="https://mudblazor.com/" Color="Color.Default" Size="Size.Large">MudBlazor</MudButton>
        <MudButton Link="https://github.com/henon/TryMudBlazor" Color="Color.Primary" Size="Size.Large">Source Code</MudButton>
    </MudAppBar>
</MudContainer>
<MudContainer MaxWidth="MaxWidth.Large" Class="py-16">
    <MudGrid>
        <MudItem md="6" xs="12">
            <MudBlazorLogo />
        </MudItem>
        <MudItem md="6" xs="12">
            <div class="trymudblazor-index mt-12">
                <MudText Typo="Typo.h1" Align="Align.Center">
                    Try<span style="color: #594ae2;">MudBlazor</span>
                </MudText>
                <MudText Typo="Typo.h5" Class="my-5" Align="Align.Center">
                    A playground for <MudLink Typo="Typo.h5" Href="https://mudblazor.com" Target="_blank">MudBlazor</MudLink> @Version.
                </MudText>
                <div class="px-6 mt-8">
                    <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Link="/snippet">Try out now</MudButton>
                </div>
            </div>
        </MudItem>
    </MudGrid>
</MudContainer>
<MudContainer MaxWidth="MaxWidth.ExtraLarge">
    <MudPaper Elevation="24" Class="trymudblazor-paper">
        <MudGrid Spacing="10">
            <MudItem md="4">
                <div class="trymudblazor-paper-item">
                    <MudText Typo="Typo.h5" GutterBottom="true" Align="Align.Center" Color="Color.Primary">
                        Smooth Coding
                    </MudText>
                    <MudText Typo="Typo.h6" Align="Align.Center" Style="color:#9e9e9e;">
                        Play with <MudLink Typo="Typo.h6" Color="Color.Default" Href="https://mudblazor.com/">MudBlazor</MudLink> components entirely in the browser. Test and experiment anytime, anywhere.
                    </MudText>
                </div>
            </MudItem>
            <MudItem md="4">
                <div class="trymudblazor-paper-item">
                    <MudText Typo="Typo.h5" GutterBottom="true" Align="Align.Center" Color="Color.Secondary">
                        Kudos to Blazor REPL
                    </MudText>
                    <MudText Typo="Typo.h6" Align="Align.Center" Style="color:#9e9e9e;">
                        Based on Blazor REPL which is free to use and open source.
                        Check out their <MudLink Typo="Typo.h6" Color="Color.Default" Href="https://github.com/BlazorRepl/BlazorRepl">GitHub</MudLink> or the website <MudLink Typo="Typo.h6" Color="Color.Default" Href="https://blazorrepl.com/">blazorrepl.com</MudLink>
                    </MudText>
                </div>
            </MudItem>
            <MudItem md="4">
                <div class="trymudblazor-paper-item">
                    <MudText Typo="Typo.h5" GutterBottom="true" Align="Align.Center">
                        Anonymous and secure
                    </MudText>
                    <MudText Typo="Typo.h6" Align="Align.Center" Style="color:#9e9e9e;">
                        Save your code snippets anonymously and share the generated url with anyone.
                    </MudText>
                </div>
            </MudItem>
        </MudGrid>
    </MudPaper>
</MudContainer>
<Footer />

@code{

    string Version
    {
        get
        {
            var v= typeof(MudText).Assembly.GetName().Version;
            return $"v{v.Major}.{v.Minor}.{v.Build}";
        }
    }

}