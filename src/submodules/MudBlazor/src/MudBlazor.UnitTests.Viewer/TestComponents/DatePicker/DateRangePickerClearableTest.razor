<MudPopoverProvider/>
<MudStack>
    <MudDateRangePicker Class="hsx-daterange"
                        @bind-DateRange="_dateRange"
                        Clearable="true"
                        PlaceholderStart="PlaceholderFrom"
                        PlaceholderEnd="PlaceholderTo"
                        ShowToolbar="false"
                        Variant="Variant.Outlined"
    />
    <MudDateRangePicker Class="hsx-daterange"
                        @bind-DateRange="_dateRange"
                        Clearable="true"
                        PlaceholderStart="PlaceholderFrom"
                        PlaceholderEnd="PlaceholderTo"
                        ShowToolbar="false"
                        Variant="Variant.Outlined"
                        DateFormat="dd-MMM-yyyy"
    />
