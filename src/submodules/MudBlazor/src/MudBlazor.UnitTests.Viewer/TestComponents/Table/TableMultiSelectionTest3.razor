<MudText>SelectedItems { @string.Join(", ", _selectedItems) }</MudText>
<MudTable Items="_items" @bind-SelectedItems="_selectedItems" MultiSelection="true">
    <HeaderContent>
        <MudTh>#</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context</MudTd>
    </RowTemplate>
</MudTable>

@code {
    public static string __description__ = "The check box of row 1 should be checked. Header checkbox should be off.";

    private readonly int[] _items = [0, 1, 2];
    private HashSet<int> _selectedItems = [1];
}
