<MudTable @ref="Table" T="string" Items="_items" @bind-SelectedItem="_selectedItem">
    <HeaderContent>
        <MudTh>#</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd>@context</MudTd>
    </RowTemplate>
    <RowEditingTemplate>
        <MudTd>
            <MudTextField T="string" @bind-Value="@context"></MudTextField>
        </MudTd>
    </RowEditingTemplate>
</MudTable>

@code {
    public static string __description__ = "Inline Edit Table: Basic";

    private string? _selectedItem;
    private readonly string[] _items = ["A", "B", "C"];

    public MudTable<string> Table { get; private set; } = null!;
}
