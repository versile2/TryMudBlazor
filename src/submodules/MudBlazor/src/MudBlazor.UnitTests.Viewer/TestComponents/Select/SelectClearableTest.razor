<MudPopoverProvider />

<MudSelect @bind-Value="_value" Clearable="true" OnClearButtonClick="@ClearButtonClickHandler">
    <MudSelectItem Value="@("1")" />
    <MudSelectItem Value="@("2")" />
    <MudSelectItem Value="@("3")" />
</MudSelect>

@code {
    public static string __description__ = "Initially hidden clear button should show when item is selected.";

    private string? _value;

    public bool ClearButtonClicked { get; private set; }

    private void ClearButtonClickHandler(MouseEventArgs e)
    {
        ClearButtonClicked = true;
    }
}
