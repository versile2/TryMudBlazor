<MudDialog>
    <DialogContent>
        <MudMenu Label="Open Menu 1">
            <MudMenuItem>Item 1</MudMenuItem>
            <MudMenuItem>Item 2</MudMenuItem>
            <MudMenuItem>Item 3</MudMenuItem>
        </MudMenu>
        <MudSelect @bind-Value="@_firstText" T="string" Label="First select">
            <MudSelectItem Value='"First select 1"'>First select 1</MudSelectItem>
            <MudSelectItem Value='"First select 2"'>First select 2</MudSelectItem>
        </MudSelect>
        <MudSelect @bind-Value="@_secondText" T="string" Label="Second select">
            <MudSelectItem Value='"Second select 1"'>Second select 1</MudSelectItem>
            <MudSelectItem Value='"Second select 2"'>Second select 2</MudSelectItem>
        </MudSelect>
        <MudSelect @bind-Value="@_thirdText" T="string" Label="Third select">
            <MudSelectItem Value='"Third select 1"'>Third select 1</MudSelectItem>
            <MudSelectItem Value='"Third select 2"'>Third select 2</MudSelectItem>
        </MudSelect>
        <MudMenu Label="Open Menu 2">
            <MudMenuItem>Item 1</MudMenuItem>
            <MudMenuItem>Item 2</MudMenuItem>
            <MudMenuItem>Item 3</MudMenuItem>
        </MudMenu>
    </DialogContent>
</MudDialog>

@code {
    private string _firstText = string.Empty;
    private string _secondText = string.Empty;
    private string _thirdText = string.Empty;
}