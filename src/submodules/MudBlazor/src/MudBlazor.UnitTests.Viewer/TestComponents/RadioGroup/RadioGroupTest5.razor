<MudRadioGroup @bind-Value="@_option" @bind-Value:after="BindAfter">
    <MudRadio Value="@("1")" />
    <MudRadio Value="@("2")" />
    <MudRadio Value="@("3")" />
</MudRadioGroup>

<MudButton OnClick="OnClick" />

@code {
    public static string __description__ = "RadioGroup should be resettable";

    private string? _option;

    public int BindAfterCount { get; private set; }

    private void OnClick() => _option = null;

    private void BindAfter() => BindAfterCount++;
}
