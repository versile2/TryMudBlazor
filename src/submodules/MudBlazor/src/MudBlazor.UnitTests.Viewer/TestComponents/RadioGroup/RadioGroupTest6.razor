<MudRadioGroup @bind-Value="@_option">
    <MudRadio Value="@("1")" Dense="true" />
    <MudRadio Value="@("2")" Size="Size.Small" />
    <MudRadio Value="@("3")" />
    <MudRadio Value="@("4")" Size="Size.Large" />
</MudRadioGroup>

<MudButton OnClick="OnClick" />

@code {
    public static string __description__ = "RadioGroup should be resettable";

    private string? _option;

    private void OnClick() => _option = null;
}
