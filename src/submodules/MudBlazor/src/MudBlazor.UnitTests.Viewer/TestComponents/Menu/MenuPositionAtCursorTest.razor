<MudPopoverProvider />

<MudPaper Class="flex-1 d-flex pa-1" Width="500px" Height="500px" Outlined="true" Square="true">
    <MudMenu PositionAtCursor="true" Dense="true" class="mud-height-full mud-width-full" ActivationEvent="@MouseEvent.RightClick">
        <ActivatorContent>
            <MudPaper Class="d-flex align-center justify-center  mud-info" Height="100%" Width="100%">
                <MudText Typo="Typo.h6">Right Click Me</MudText>
            </MudPaper>

        </ActivatorContent>
        <ChildContent>
            <MudMenuItem Label="Dense Stuff" />
            <MudMenuItem Label="Stuff is Dense" />
            <MudMenuItem Label="Soo Dense" />
        </ChildContent>
    </MudMenu>
</MudPaper>

@code {
    public static string __description__ = "Covers setting PositionAtCursor for MudMenu regardless of container.";
}
