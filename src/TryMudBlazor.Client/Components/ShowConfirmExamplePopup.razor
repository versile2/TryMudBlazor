<div class="relative">
    <MudPopover Open="@Visible" AnchorOrigin="Origin.TopRight" Class="ml-4 px-4 pt-3 pb-2">
        <MudStack>
            <MudText Typo="Typo.h6">This will overwrite your code tabs, are you sure?</MudText>
            <div>
                <MudStack Spacing="1" Row AlignItems="AlignItems.Center" Justify="Justify.SpaceAround">
                    <MudButton Color="Color.Warning" OnClick="@CancelClick" Class="ml-n1">Cancel</MudButton>
                    <MudButton Color="Color.Success" OnClick="@ConfirmClick" Class="ml-n1">Confirm</MudButton>                    
                </MudStack>
            </div>
        </MudStack>
    </MudPopover>
    <MudOverlay Visible="Visible" OnClick="OnClose" />
</div>


